pipeline
{
agent any
stages
{
  stage('one')
   {
    steps
    {
      echo "Hello Jenkins from git"
    }
   }
   stage('Two')
   {
    steps
    {
      input('Do u want to continue?')
    }
   }
   stage('Three')
   {
    when{      
       not{
          branch "master"
         } 
      }
      steps
      {
      echo "hello in master"
      }
   }
    stage('Four') {
                 parallel { 
                            stage('Unit Test') 
                            {
                           steps {
                                echo "Running the unit test..."
                                }
                           }
                            stage('Integration test')
                            {  
                              steps
                              {
                                echo "Running the integration test..."
                              }
                           }
                          }
                   }
}
}

